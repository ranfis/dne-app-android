<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eem.apps.enelmall.DetailsActivity"
    android:id="@+id/containerGeneral"
    android:padding="@dimen/activity_with_cards">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/containerScroll">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/containerOffers"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/containerTop"
                    android:gravity="center"
                    android:background="@drawable/layer_card_background"
                    android:paddingRight="0dp"
                    android:paddingLeft="0dp"
                    android:layout_marginBottom="8dp">
                <!--    android:background="#E0EEEE" -->

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="175dp"
                        android:id="@+id/photoOffer"
                        android:background="#000000"
                        android:layout_marginRight="0dp"
                        android:src="@drawable/zapato_example"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:id="@+id/containerText"
                        android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Oferta miercoles rojo y todo gratis"
                        android:id="@+id/titleOffer"
                        android:gravity="left|center_vertical|center_horizontal"
                        android:textSize="24sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Belleza"
                            android:id="@+id/categoryOffer"
                            android:layout_gravity="bottom|right" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/containerDetails"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/layer_card_background"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Detalles"
                        android:id="@+id/detailsText"
                        android:gravity="left"
                        android:textColor="#5E5E5E"
                        android:textSize="20sp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Detalles de la oferta sobre los miercoles rojo y todo gratis nam ultrices, elit eu pellentesque efficitur, nisi neque gravida felis, sed lacinia nunc ligula id lectus. Donec non pretium felis. Donec tristique tincidunt purus a pulvinar. Fusce eu augue orci. "
                        android:id="@+id/detailsOffer"
                        android:textColor="#A9A9A9"
                        android:textIsSelectable="false"
                        android:gravity="fill_horizontal"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/containerTypeAndExp"
                    android:baselineAligned="false"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/containerType"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="@drawable/layer_card_background"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:padding="17dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Tipo"
                            android:id="@+id/typeText"
                            android:textColor="#AD851B"
                            android:layout_marginBottom="10dp"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/typeOffer"
                            android:src="@drawable/exptime" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contExpandIcon"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="@drawable/layer_card_background"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/expIconImage"
                            android:src="@drawable/exptime"
                            android:layout_gravity="bottom" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|center_horizontal"
                            android:id="@+id/containerExp"
                            android:padding="1dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="ExpiraciÃ³n"
                                android:id="@+id/expText"
                                android:textColor="#AD851B"
                                android:layout_marginBottom="10dp"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="20/05/2015"
                                android:id="@+id/expTime"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="1dp"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/containerStore"
                android:gravity="center_vertical|center_horizontal"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/selector"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:paddingBottom="2dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:padding="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/containerDetailsStore"
                    android:clickable="false">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:id="@+id/storePhoto"
                        android:layout_weight="2"
                        android:background="#000000"
                        android:adjustViewBounds="false"
                        android:scaleType="centerCrop"
                        android:src="@drawable/store_example" />

                    <LinearLayout
                        android:padding="0dp"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:background="@drawable/selector"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/containerCard"
                        android:clickable="true">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="0"
                            android:id="@+id/containerTitleStore"
                            android:layout_marginBottom="0dp"
                            android:paddingLeft="16dp"
                            android:paddingTop="16dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Conomanias para machos"
                                android:id="@+id/titleStore"
                                android:textSize="20sp" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
