<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="100dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/container_offer"
        android:paddingRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:paddingLeft="10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/offer_image" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/container_text_type"
            android:paddingRight="0dp"
            android:layout_marginRight="0dp">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:id="@+id/container_txt">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="2x1 en Pizza los Viernes con Helados gratuitos"
                        android:id="@+id/offer_title"
                        android:textSize="18dp"
                        android:maxWidth="225dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Pizzarelli"
                        android:id="@+id/offer_store" />
                </LinearLayout>
            </TableRow>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:id="@+id/container_type"
                android:layout_marginRight="0dp"
                android:paddingRight="0dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/offer_type"
                    android:layout_gravity="center_horizontal|right"
                    android:src="@drawable/limited_time"
                    android:layout_marginRight="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="25%"
                    android:id="@+id/textView"
                    android:textSize="10dp"
                    android:layout_gravity="center_horizontal|right"
                    android:textColor="@color/eem_dark_blue" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>